<table class="table table-striped">
  <thread>
    <tr>
      <th>No.</th>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if @user.id == current_user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thread>
  <tbody>
    <% @user_stocks.each_with_index do |user_stock, index| %>
      <tr>
        <td><%= (index + 1) %></td>
        <td><%= user_stock.stock.name %></td>
        <td><%= user_stock.stock.ticker %></td>
        <td><%= user_stock.stock.price %></td>
        <% if @user.id == current_user.id %>
        <td>
          <%= link_to 'Delete', user_stock_path(user_stock), 
                                :method => :delete, 
                                :data => { :confirm => "Are you sure?" }, 
                                :class => "btn btn-xs btn-danger" %>  
        </td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>